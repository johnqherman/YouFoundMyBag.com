NODE_ENV=development
PORT=3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/youfoundmybag

# Application
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# Encryption (generate with: openssl rand -hex 32)
APP_ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# SMTP (use Mailhog for local dev: localhost:1025 with no auth)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM="App Name <noreply@example.com>"
SMTP_SECURE=false
SMTP_REQUIRE_TLS=false

# Cloudflare Turnstile (optional for local dev)
CLOUDFLARE_TURNSTILE_SECRET_KEY=your-turnstile-secret-key
CLOUDFLARE_TURNSTILE_SITE_KEY=your-turnstile-site-key
