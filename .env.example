NODE_ENV=development
PORT=3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/youfoundmybag

# Application
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# Encryption (generate with: openssl rand -hex 32)
APP_ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Mailgun (https://app.mailgun.com)
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.mailgun.org
MAILGUN_URL=https://api.mailgun.net
EMAIL_FROM="App Name <noreply@example.com>"

# Cloudflare Turnstile (optional for local dev)
CLOUDFLARE_TURNSTILE_SECRET_KEY=your-turnstile-secret-key
CLOUDFLARE_TURNSTILE_SITE_KEY=your-turnstile-site-key
